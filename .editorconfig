# Root configuration
root = true

# Apply rules for Python files
[*.py]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Rules for configuration and documentation files
[*.{yml,yaml,json,toml,ini}]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
end_of_line = lf
charset = utf-8

# Rules for Makefile
[Makefile]
indent_style = tab

# Exclude large binary files from editor formatting
[*.{png,jpg,jpeg,gif,svg,ico}]
insert_final_newline = false
trim_trailing_whitespace = false
